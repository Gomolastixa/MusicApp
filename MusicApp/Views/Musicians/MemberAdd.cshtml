@model MusicApp.Models.Musician

<h4>Musician</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="MusicRecords" asp-action="AddRecordMember" method="post">
            <input type="hidden" asp-for="Id"/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Instrument" class="control-label"></label>
                <input asp-for="Instrument" class="form-control" />
                <span asp-validation-for="Instrument" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br /><br />
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
